{
    "app-id": "org.stellarium.Stellarium",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "stellarium",
    "rename-icon": "stellarium",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a"
    ],
    "modules": [
        {
            "name": "stellarium",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_MEDIA=1",
                "-DENABLE_GPS=1"
            ],
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "install -Dm644 org.stellarium.Stellarium.appdata.xml ${FLATPAK_DEST}/share/appdata"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Stellarium/stellarium/releases/download/v0.21.3/stellarium-0.21.3.tar.gz",
                    "sha256": "8ac6c054d12f136fe0d5c0deaaa8d7b69dd2a462be1711a187364574aef97e7f"
                },
                {
                    "type": "file",
                    "path": "org.stellarium.Stellarium.appdata.xml"
                }
            ]
        }
    ]
}
