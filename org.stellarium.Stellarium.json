{
    "app-id": "org.stellarium.Stellarium",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "stellarium",
    "rename-icon": "stellarium",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a"
    ],
    "modules": [
        {
            "name": "stellarium",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_MEDIA=1",
                "-DENABLE_GPS=1"
            ],
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "install -Dm644 org.stellarium.Stellarium.appdata.xml ${FLATPAK_DEST}/share/appdata"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Stellarium/stellarium/releases/download/v0.22.0/stellarium-0.22.0.tar.gz",
                    "sha256": "0b4dc23cf9054b5e76cd9bc5ad68e172eb221999e90af37e93667d04fe78c885"
                },
                {
                    "type": "file",
                    "path": "org.stellarium.Stellarium.appdata.xml"
                }
            ]
        }
    ]
}
