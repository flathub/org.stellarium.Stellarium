{
    "app-id": "org.stellarium.Stellarium",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "stellarium",
    "rename-icon": "stellarium",
    "rename-appdata-file": "stellarium.appdata.xml",
    "rename-desktop-file": "stellarium.desktop",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a"
    ],
    "modules": [
        {
            "name": "stellarium",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_MEDIA=1",
                "-DENABLE_GPS=1",
                "-DENABLE_NLS=0"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Stellarium/stellarium/releases/download/v0.20.1/stellarium-0.20.1.tar.gz",
                    "sha256": "154e7bd9d4b914a99c40eab86d05b78e43040d657844ee665ebb2aa55a9e920c"
                }
            ]
        }
    ]
}
