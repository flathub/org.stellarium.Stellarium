            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_MEDIA=1",
                "-DENABLE_GPS=1",
                "-DENABLE_SHOWMYSKY=0"
            ],
            "sources": [
                {
                    "type": "archive",
